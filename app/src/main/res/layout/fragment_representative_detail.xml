<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDivider"
    tools:context="com.epicodus.twitterproject.ui.RepresentativeDetailActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="263dp"
            android:background="@android:color/white"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/representativeNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Placeholder Name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/partyTextView"
                android:layout_width="387dp"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="Placeholder Party"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_below="@+id/representativeNameTextView"
                android:layout_alignParentStart="true"
                android:layout_marginTop="28dp" />

            <TextView
                android:id="@+id/phoneTextView"
                android:layout_width="387dp"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="Placeholder Phone"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_below="@+id/partyTextView"
                android:layout_alignParentStart="true"
                android:layout_marginTop="28dp" />


            <ImageView
                android:id="@+id/representativeImageView"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop" />


        </RelativeLayout>
    </LinearLayout>



        <Button
            android:id="@+id/saveRepresentativeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorAccent"
            android:text="Save Representative"
            android:textColor="@color/colorTextIcons"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </RelativeLayout>

</RelativeLayout>