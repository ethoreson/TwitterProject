<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDivider"
    tools:context="com.epicodus.twitterproject.MainActivity">

    <TextView
        android:id="@+id/appIntroTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="Welcome to 'Tweet Your Rep'! Enter your zip code, and we'll list the twitter feeds of your elected representatives. Make your voice heard!"
        android:textColor="@color/colorPrimaryText"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019" />

    <Button
        android:id="@+id/findRepsButton"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryLight"
        android:text="Find Reps"
        android:textColor="@color/colorPrimaryText"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="447dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/zipCodeText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/zipCodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorTextIcons"
        android:hint="Enter Zip Code"
        android:inputType="number"
        android:padding="5dp"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="398dp"
        android:layout_below="@+id/appIntroTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About TYR"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
