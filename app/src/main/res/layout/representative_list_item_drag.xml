<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/representativeNameTextView"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Representative Name"
        android:textColor="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/dragIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@id/representativeNameTextView"
        android:layout_alignBottom="@id/representativeNameTextView"
        android:gravity="bottom|left"
        android:src="@drawable/ic_reorder_black_24dp"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="match_parent"
        android:padding="10dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Party"
            android:id="@+id/partyTextView"
            android:layout_below="@+id/representativeNameTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:id="@+id/phoneTextView"
            android:layout_below="@+id/partyTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="italic"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>